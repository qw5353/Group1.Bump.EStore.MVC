@model Bump.EStore.MVC.ViewModels.ContactUs.ContactUsEditVM

@{
    ViewBag.Title = "Edit";
    var options = new string[] { "待回覆", "處理中", "已結案" };
}

<h2>編輯狀態</h2>


@using (Html.BeginForm("Edit", "ContactUs", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="mb-3">
            <div class="row">

                <div class="col-auto">
                    <label for="status-select" class="form-label">狀態: </label>
                </div>
                <div class="col-auto">
                    <select name="Status" id="status-select">
                        @foreach (var status in options)
                        {
                            <option value="@status" @(Model.Status == status ? "selected" : string.Empty)>@status</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <input type="submit" value="儲存" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
