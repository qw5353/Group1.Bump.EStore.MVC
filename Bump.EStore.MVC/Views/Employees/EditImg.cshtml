@model Bump.EStore.MVC.ViewModels.Employees.EmployeeEditImgVM

@{
    ViewBag.Title = "修改圖片";
}

<h2>修改大頭貼</h2>


@using (Html.BeginForm("EditImg", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row  border border-1 p-3 px-5">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="mb-3 col-md-3">
                <img src="~/Uploads/EmployeeImg/@Model.Img" class="img-thumbnail" style="width: 250px; height: 250px;" />
            </div>
            <div class="mb-3 col-md-9ㄉ">
                @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "form-label col-md-2" })
                <input type="file" name="file1" class="form-control" />
                @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })

            </div>
            <div class="mb-3 align-self-end d-flex justify-content-end">
                <input type="submit" value="確定變更" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回清單", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
